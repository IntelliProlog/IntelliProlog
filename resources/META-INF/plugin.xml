<idea-plugin>
    <id>ch.eif.intelliprolog</id>
    <name>IntelliProlog</name>
    <version>1.0</version>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">HEIA-FR</vendor>

    <description><![CDATA[
      IntelliJ plugin to add support for GNUProlog, possibly other Prolog implementations in the future
    ]]></description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>
    }}}}
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <moduleType id="PROLOG_MODULE_TYPE" implementationClass="ch.eif.intelliprolog.module.PrologModuleType"/>
        <fileTypeFactory implementation="ch.eif.intelliprolog.PrologFileTypeFactory"/>
        <sdkType implementation="ch.eif.intelliprolog.sdk.PrologSdkType"/>
        <runConfigurationProducer implementation="ch.eif.intelliprolog.runner.PrologRunConfigurationProducer"/>
        <configurationType implementation="ch.eif.intelliprolog.runner.PrologRunConfigurationType"/>
        <programRunner implementation="ch.eif.intelliprolog.runner.PrologDefaultProgramRunner"/>
        <lang.parserDefinition language="Prolog" implementationClass="ch.eif.intelliprolog.PrologParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Prolog"
                                       implementationClass="ch.eif.intelliprolog.PrologSyntaxHighlighterFactory"/>
        <annotator language="Prolog" implementationClass="ch.eif.intelliprolog.editor.PrologAnnotator"/>
        <colorSettingsPage implementation="ch.eif.intelliprolog.PrologColorSettingsPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="ch.eif.intelliprolog.TestAction" class="ch.eif.intelliprolog.TestAction" text="TestAction"
                description="TestAction">
            <add-to-group group-id="RunMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>