<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>ch.heiafr.intelliprolog</id>
    <name>IntelliProlog</name>
    <version>1.0.0-SNAPSHOT</version>
    <vendor email="intelli.prolog@gmail.com" url="https://heia-fr.ch/">HEIA-FR</vendor>
    <description><![CDATA[IntelliJ plugin to add support for GNUProlog, possibly other Prolog implementations in the future]]></description>
    <change-notes />
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="220.*" />
    }}}}
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.java</depends>
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="ch.heiafr.intelliprolog.PrologProjectComponent" />
        <gotoDeclarationHandler implementation="ch.heiafr.intelliprolog.reference.PrologGotoDeclarationHandler" />
        <lang.findUsagesProvider language="Prolog" implementationClass="ch.heiafr.intelliprolog.reference.PrologFindUsageProvider" />
        <customUsageSearcher implementation="ch.heiafr.intelliprolog.reference.PrologCustomUsageSearcher" />
        <renamePsiElementProcessor implementation="ch.heiafr.intelliprolog.reference.PrologRenamePsiElementProcessor" />
        <moduleType id="Prolog_Module" implementationClass="ch.heiafr.intelliprolog.module.PrologModuleType" />
        <fileType name="Prolog file" implementationClass="ch.heiafr.intelliprolog.PrologFileType" fieldName="INSTANCE" language="Prolog" extensions="pl" />
        <sdkType id="Prolog" implementation="ch.heiafr.intelliprolog.sdk.PrologSdkType" />
        <lang.parserDefinition language="Prolog" implementationClass="ch.heiafr.intelliprolog.PrologParserDefinition" />
        <lang.syntaxHighlighterFactory language="Prolog" implementationClass="ch.heiafr.intelliprolog.editor.PrologSyntaxHighlighterFactory" />
        <annotator language="Prolog" implementationClass="ch.heiafr.intelliprolog.editor.PrologAnnotator" />
        <colorSettingsPage implementation="ch.heiafr.intelliprolog.PrologColorSettingsPage" />
        <lang.braceMatcher language="Prolog" implementationClass="ch.heiafr.intelliprolog.editor.PrologPairedBraceMatcher" />
        <lang.commenter language="Prolog" implementationClass="ch.heiafr.intelliprolog.editor.PrologCommenter" />
        <lang.foldingBuilder language="Prolog" implementationClass="ch.heiafr.intelliprolog.editor.PrologFoldingBuilder" />
        <externalAnnotator language="Prolog" implementationClass="ch.heiafr.intelliprolog.editor.PrologExternalAnnotator"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
        <action id="ch.heiafr.intelliprolog.repl.actions.LoadPrologFileInConsoleAction" class="ch.heiafr.intelliprolog.repl.actions.LoadPrologFileInConsoleAction" text="Load/Reload Current File in REPL...">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift L" />
            <add-to-group group-id="EditorPopupMenu" anchor="last" />
            <add-to-group group-id="RunMenu" anchor="first" />
        </action>
        LoadPrologFileInExternalTerminal
        <action id="ch.heiafr.intelliprolog.repl.actions.LoadPrologFileInExternalTerminal" class="ch.heiafr.intelliprolog.repl.actions.LoadPrologFileInExternalTerminal" text="Load current file in an external terminal...">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift T" />
            <add-to-group group-id="EditorPopupMenu" anchor="last" />
            <add-to-group group-id="RunMenu" anchor="first" />
        </action>
        <action id="ch.heiafr.intelliprolog.repl.actions.RunPrologConsoleAction" class="ch.heiafr.intelliprolog.repl.actions.RunPrologConsoleAction" text="Run gProlog REPL...">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift R" />
            <add-to-group group-id="EditorPopupMenu" anchor="last" />
            <add-to-group group-id="RunMenu" anchor="first" />
        </action>
    </actions>
</idea-plugin>
